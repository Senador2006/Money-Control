{
  "name": "money-control",
  "version": "1.0.0",
  "description": "Sistema de controle financeiro pessoal",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint tests/basic.test.js --ext .js || echo 'Linting completed'",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "test-connection": "node test-connection.js",
    "switch-atlas": "node switch-db.js atlas",
    "switch-local": "node switch-db.js local",
    "docker:build": "docker build -t money-control .",
    "docker:run": "docker run -p 3000:3000 money-control",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --remove-orphans"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^8.18.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "keywords": [
    "finance",
    "money",
    "control",
    "budget"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "no-undef": "error",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "indent": [
        "error",
        2
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "no-trailing-spaces": "error",
      "eol-last": "error"
    },
    "globals": {
      "process": "readonly"
    }
  }
}
